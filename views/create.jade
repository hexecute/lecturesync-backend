extends layout

block content
  div#slides_dest(data-val=slides)
  #title
    | lecture
    span#plus &plus;
    | sync
    span#tagline  recording your lectures - slide by slide 
    hr(width='50%', color='#000066')
  form(method="post")
    #naming 
      .row
        .col-md-6.col-md-offset-3
          input.form-control(type="text", placeholder="Name of Lecture", name="name") 
      input#delay_values(type="hidden", name="delay_values")
      input#submit(type="submit", disabled) Submit
  div.text-center
    canvas#the-canvas(style='border:1px solid black')
    br
    audio(controls)
  .row
    .col-md-3.col-md-offset-9
      #controlpanel
        .text-center
          span
          | Page:
          span#page_num
          | /
          span#page_count
        br
        button#replay(onclick='audio.play(); goReplay()') Replay
        br
        //- button#next( onclick='goNextWrapper()')
          //- img(src='/img/nextslide.png', alt='Next Slide', width='120px')
        input#next(type="image", onclick='goNextWrapper()', src='/img/nextslide.png', width='120px')
        br
        br
        img(src='/img/upload.png', alt='Upload Document', width='130px')
        br
        br
        //- button#start(onclick='toggleRecording(this); goStart()')
        //-   img(src='/img/start.png', alt='Start Recording', width='130px')
        input#start(type="image", onclick='toggleRecording(this); goStart()', src='/img/start.png', width='130px')
        br
        br
        //- input(type="image", src= '/img/done.png', border='0', alt='Done Recording', width='130px')
        //- button#stop(onclick='saveAudio(); goStop()')
        //-   img(src='/img/done.png', alt='Done Recording', width='130px')
        input#stop(type="image", onclick='saveAudio(); goStop()', src='/img/done.png', width='130px', disabled)


block headscripts
  script(src='/js/jquery-1.10.2.min.js')
  script(type='text/javascript', src='/js/AudioContextMonkeyPatch.js')
  script(type='text/javascript', src='/js/pdf.js')
  script(type='text/javascript', src='/js/recorder.js')
  script(type='text/javascript', src='/js/alt-audio.js')

